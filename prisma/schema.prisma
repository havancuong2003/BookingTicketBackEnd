generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role{
    id Int @id @default(autoincrement())
    roleName String @unique
    user User[]
}
model User{
  id Int @id @default(autoincrement())
  email String @unique
  hashPass String?
  firstName String
  lastName String
  phoneNumber String? @unique
  picture String? 
  roleId Int?
  role Role? @relation(fields: [roleId],references: [id])
  isEmailVerified Boolean @default(false)
  verificationToken String?
  verificationTokenExpires DateTime?
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  seats Seat[]
}

model Movie {
  id          Int       @id @default(autoincrement())
  title       String?
  description String?
  director    String?
  actors      String?
  releaseDate DateTime?
  rating      Float?
  status      String?
  banner      String?
  duration    Int?
  trailer    String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}


model Cinema {
  cinemaId    Int      @id @default(autoincrement())
  name        String?
  location    String?
  totalScreens Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  rooms Room[]
  screenings  Screening[]
}




model Room {
  roomId    Int      @id @default(autoincrement())
  roomCode  String?
  cinemaId Int?

  cinema Cinema? @relation(fields: [cinemaId],references: [cinemaId])
  screenings  Screening[]
  seats Seat[]
}


model Screening {
  screeningId Int      @id @default(autoincrement())
  movieId     Int?
  cinemaId    Int?
  roomId      Int?
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt

seats Seat[]
  cinema      Cinema?    @relation(fields: [cinemaId], references: [cinemaId])
  room        Room?     @relation(fields: [roomId], references: [roomId])
}


model Seat {
  seatId     Int     @id // Primary Key: ID gháº¿
  roomId  Int?
  screeningId  Int?
  seatNumber Int?     
  rowCode  String ? 
  seatType   Int ?  @default(0)
  status     Int ? @default(0)
  userId     Int ?


 user User? @relation(fields: [userId], references: [id])
  screening  Screening? @relation(fields: [screeningId], references: [screeningId])
  room        Room?     @relation(fields: [roomId], references: [roomId])// Optional: Maps the table name in the database
}